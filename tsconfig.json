{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "./compile",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "sourceMap": true,
  },
  "exclude" : ["node_modules", "**/*.spec.ts"],
  "include" : ["src/**/*.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}